@model PhotoArchive.Models.Photo

@{
    ViewData["Title"] = "Add To Film by file";
}

<h1>@ViewData["Title"]</h1>

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            
        </div>


        <form asp-action="AddToFilmByFiles" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Film" class="control-label"></label>:
                @Model.Film
                <select asp-for="FilmId" class ="form-control" asp-items="ViewBag.FilmId" hidden></select>    
            </div>
            <div class="form-group">
                <label asp-for="Page" class="control-label"></label>
                <input asp-for="Page" class="form-control" placeholder="0"/>
            </div>
            <div class="form-group">
                <input type="file" name="uploadedFiles" multiple> <!--multiple-->
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
