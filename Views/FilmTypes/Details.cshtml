@model PhotoArchive.Models.FilmType

@{
    ViewData["Title"] = "Details";
    var Reciepes = ViewBag.Reciepes as List<Recipe>;
}

<h1>Details</h1>

<div>
    <h4>FilmType</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISO)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color_Is_Possible)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color_Is_Possible)
        </dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>

<div class="Descenders">
    <h4>Development Options</h4>
    <a asp-controller="Recipes" asp-action="AddRecFromFT" asp-route-Id="@Model?.Id"><h6>Add new</h6></a>
    <div class="DescendersList">
        @foreach (Recipe Rec in (List<Recipe>)ViewBag.Recipes)
        {
            <div class="OneDescender">
                <a asp-controller="Recipes" asp-action="Details" asp-route-id="@Rec.Id" class="DescenderData">
                    <div class="DescenderDesc">
                        @Rec.To_StringForFT
                    </div>
                </a>
            </div>
        }
    </div>
</div>
